# File Read & Write Challenge üñãÔ∏è

def modify_file(input_file, output_file):
    try:
        # Step 1: Read the original file
        with open(input_file, "r") as f:
            content = f.read()

        # Step 2: Modify the content (example: uppercase text)
        modified_content = content.upper()

        # Step 3: Write the modified content to a new file
        with open(output_file, "w") as f:
            f.write(modified_content)

        print(f"File successfully modified and saved as '{output_file}'")

    except FileNotFoundError:
        print("Error: The input file does not exist.")
    except Exception as e:
        print(f"An error occurred: {e}")


# Example usage
modify_file("input.txt", "output.txt")
